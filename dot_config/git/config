[alias]
    aa = add --all
    amend = commit -a --amend
    br = branch
    c = commit
    cb = !git checkout $(git branch | fzf)
    co = checkout
    scrub = gc --aggressive --prune=now
    st = status -sb

[color]
    branch = auto
    diff = auto
    grep = auto
    status = auto

[core]
    abbrev = 12
    autocrlf = input
    ignorecase = false
    whitespace = fix,space-before-tab,tab-in-indent,trailing-space

[init]
	defaultBranch = main

[pull]
    rebase = true
    tags = true

[push]
    default = nothing

[fetch]
    prune = true
    pruneTags = true

[rebase]
    stat = true

[user]
    useConfigOnly = true

[url "ssh://git@github.comcast.com/"]
    insteadOf = https://github.comcast.com/
