[alias]
aa = add --all
amend = commit -a --amend
br = branch
c = commit
cb = !git checkout $(git branch | fzf)
co = checkout
lg = log --graph --pretty=format:'%C(red)%h%C(reset) %C(yellow)%d%C(reset) %s %C(green)(%an %cr)%C(reset)'
prp = pull --rebase --prune
scrub = gc --aggressive --prune=now
st = status -sb

[color]
branch = auto
diff = auto
grep = auto
status = auto

[core]
abbrev = 12
autocrlf = input
excludesFile = ~/.config/git/ignore
ignorecase = false
pager = delta
whitespace = fix,space-before-tab,tab-in-indent,trailing-space

[delta]
line-numbers = true
navigate = true
side-by-side = true

[diff]
colorMoved = default

[init]
defaultBranch = main

[interactive]
diffFilter = delta --color-only

[merge]
conflictstyle = diff3

[pull]
rebase = true
tags = true

[push]
default = nothing

[fetch]
prune = true
pruneTags = true

[rebase]
stat = true

[url "ssh://git@github.com/"]
insteadOf = https://github.com/

[user]
useConfigOnly = true

